@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutPublic";
}

<div class="center-align">
  <h3 class="display-4">Find Developer With</h3>
    
  <div class="row">
    <form id="formDevUname" class="col s12" asp-action="Index" asp-controller="Home">
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">account_circle</i>
          <input id="developerUsername" name="developerUsername" type="text" class="validate">
          <label for="developerUsername">Username</label>
        </div>
      </div>
      <div class="row center-align">
        <input value="Submit Here" type="submit" class="btn teal"/>          
      </div>
    </form>
  </div>
  
  <div id="resume">
    <!-- Profile Card -->
    <div class="row">
      <div class="col s12">
        <div class="card grey darken-3">
          <div class="card-content white-text left-align">
            <span class="card-title" id="_DeveloperName"></span>
            <p id="_DeveloperDescription"></p>
          </div>
          <div class="left-align card-action">
            <a>Job Availability</a>
            <a id="_DeveloperJobConfirmation"></a>
          </div>
        </div>
      </div>
    </div>
    
    <div id="CForcesPreloader">
    <h3>Codeforces is on the way !!!</h3>
      <div class="preloader-wrapper big active">
        <div class="spinner-layer spinner-blue">
          <div class="circle-clipper left">
            <div class="circle"></div>
          </div>
          <div class="gap-patch">
            <div class="circle"></div>
          </div>
          <div class="circle-clipper right">
            <div class="circle"></div>
          </div>
        </div>

        <div class="spinner-layer spinner-red">
          <div class="circle-clipper left">
            <div class="circle"></div>
          </div>
          <div class="gap-patch">
            <div class="circle"></div>
          </div>
          <div class="circle-clipper right">
            <div class="circle"></div>
          </div>
        </div>

        <div class="spinner-layer spinner-yellow">
          <div class="circle-clipper left">
            <div class="circle"></div>
          </div>
          <div class="gap-patch">
            <div class="circle"></div>
          </div>
          <div class="circle-clipper right">
            <div class="circle"></div>
          </div>
        </div>

        <div class="spinner-layer spinner-green">
          <div class="circle-clipper left">
            <div class="circle"></div>
          </div>
          <div class="gap-patch">
            <div class="circle"></div>
          </div>
          <div class="circle-clipper right">
            <div class="circle"></div>
          </div>
        </div>
      </div>
      </div>

    
    <!-- CodeForces Resume -->
    <div id="CForcesResume">
      <div class="row">
        <div class="col s12">
          <div class="card blue-grey darken-3">
            <div class="card-content white-text">
              <span class="card-title left-align">Rating</span>
              <div class="chart-container">
                <canvas id="problem_rating_codeForces_bar"></canvas>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      
      
      <div class="row">
        <div class="col s12">
          <div class="card blue-grey darken-3">
            <div class="card-content white-text">
              <span class="card-title left-align">Verdicts</span>
              <div class="chart-container">
                <canvas id="verdicts_codeForces_pie"></canvas>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <div class="card grey darken-3">
            <div class="card-content white-text">
              <span class="card-title left-align">Tags</span>
              <div class="chart-container">
                <canvas id="tags_codeForces_doughnut"></canvas>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <div class="card blue-grey darken-3">
            <div class="card-content white-text">
              <span class="card-title left-align">Languages used</span>
              <div class="chart-container">
                <canvas id="languages_codeForces_pie"></canvas>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <div class="card grey darken-3">
            <div class="card-content white-text">
              <span class="card-title left-align">Levels</span>
              <div class="chart-container">
                <canvas id="levels_codeForces_bar"></canvas>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
    
    <!-- UVA Resume -->
    <div id="UHuntResume" class="row">
          def
    </div>
    
    <!-- GitHub Resume -->
    <div id="GithubResume" class="row">
          efg
    </div>
  </div>
            
</div>

@section Scripts {
    @{
      await Html.RenderPartialAsync("_initHome");
    }
}
