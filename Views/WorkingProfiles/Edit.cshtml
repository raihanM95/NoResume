@model NoResume.Models.WorkingProfile

@{
    ViewData["Title"] = "Edit";
    Layout = "_LayoutPrivate";
}

<h1>Edit</h1>

<h4>WorkingProfile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DeveloperId" />
            <div class="form-group">
                <label asp-for="GithubUsername" class="control-label"></label>
                <input asp-for="GithubUsername" class="form-control" />
                <span asp-validation-for="GithubUsername" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PrivacyForGithub" /> @Html.DisplayNameFor(model => model.PrivacyForGithub)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CodeforcesUsername" class="control-label"></label>
                <input asp-for="CodeforcesUsername" class="form-control" />
                <span asp-validation-for="CodeforcesUsername" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PrivacyForCodeforces" /> @Html.DisplayNameFor(model => model.PrivacyForCodeforces)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="UhuntUsername" class="control-label"></label>
                <input asp-for="UhuntUsername" class="form-control" />
                <span asp-validation-for="UhuntUsername" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PrivacyForUhunt" /> @Html.DisplayNameFor(model => model.PrivacyForUhunt)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
